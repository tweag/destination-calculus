% Used to allow tabs and newlines in OTT terms
\def\activespaces{
  \def\mynewline{\\}
  \def\myspace##1{\myrepeat{##1}{\hspace{0.7cm} } }
}
\def\visiblespaces{
  \def\mynewline{\ottsp{\backslash\!n} }
  \def\myspace##1{\myrepeat{##1}{\ottsp{\langle \ldots \rangle} } }
}
\visiblespaces{}
\makeatletter
  \newcount\my@repeat@count
  \newcommand{\myrepeat}[2]{%
